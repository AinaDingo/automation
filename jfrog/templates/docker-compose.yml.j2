version: "3.9"

services:
  artifactory:
    container_name: artifactory
    image: docker.bintray.io/jfrog/artifactory-oss
    ports:
      - "8081:8081"
      - "8082:8082"
    volumes:
      - {{ devops_tools.state_base_dir }}/jfrog:/var/opt/jfrog/artifactory
    restart: always
    ulimits:
      nproc: 65535
      nofile:
        soft: 32000
        hard: 40000

