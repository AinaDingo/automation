version: "3.9"

services:
  postgres:
    container_name: "postgres"
    hostname: postgres
    image: postgres:latest
    restart: unless-stopped
    environment:
      POSTGRES_DB: postgresdb
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: AsaMiandry!

  keycloak:
    container_name: keycloak
    image: jboss/keycloak
    depends_on:
      - postgres
    environment:
      DB_VENDOR: "postgres"
      DB_DATABASE: postgresdb
      DB_ADDR: postgres
      DB_PORT: 5432
      DB_USER: admin
      DB_PASSWORD: AsaMiandry!
      KEYCLOAK_USER: admin
      KEYCLOAK_PASSWORD: AsaMiandry!
    ports:
      - "8443:8443"
    restart: unless-stopped
